@model CurrentSupplierViewModel
@await Html.PartialAsync("PartialsMaterial/_MenuInner", "Добавление поставщика")
@{
    ViewBag.Title = "Добавление поставщика";
}

<section class="section section-sm">
    <div class="container">
        <div class="row justify-content-md-left">
            <div class="col-md-9 col-lg-7 col-xl-7">
                <form asp-action="AddSupplier">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-input form-control-last-child" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-input form-control-last-child" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-input form-control-last-child" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-input form-control-last-child" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" class="form-input form-control-last-child" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-input form-control-last-child"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Добавить" class="button button-block button-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>